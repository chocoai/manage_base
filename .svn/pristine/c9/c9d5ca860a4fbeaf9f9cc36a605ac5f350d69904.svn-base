		produce.set("CHECKDATE", new Timestamp(System.currentTimeMillis()));
		produce.set("OPDATE", new Timestamp(System.currentTimeMillis()));
		produce.set("OPERATOR", user.getStr("name"));
		System.out.println("-----" + user.getStr("name"));
		return produce.save();
	}

